extends ../layout
include ../_mixins

block append options
	- var subpage = "discussion"

block tab
	section.primary-section.text-section: center
		+header(initiative)
		h2= t("CO_AUTHORS")
		p= t("CO_AUTHORS_TEXT")

		if error
			p.flash.error= error
		
		+form.form(method="post", action="/initiatives/#{initiative.id}/authors")
			label.form-label= t("LBL_EMAIL")
			input.form-input(
				type="text",
				name="email",
				value=attrs.email,
				required)

			button.form-submit.green-button= t("ADD_CO_AUTHOR")
