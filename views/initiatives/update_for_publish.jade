extends ./layout
include ./_mixins

block append head
	script(src="/assets/inputs.js")

block tab
	- var formatIso = require("root/lib/i18n").formatDate.bind(null, "iso")
	- var min = Initiative.getMinDeadline(new Date)
	- var max = Initiative.getMaxDeadline(new Date)

	section.white-section.text-section: center
		+header(initiative)
		h2= t("DEADLINE_TITLE")
		p= t("DEADLINE_EXPLANATION")

		if error
			p.flash.error= error

		form#initiative-form.form(
			method="post",
			action="/initiatives/#{initiative.id}")
			input(type="hidden", name="_method", value="put")

			input.form-input(
				type="date",
				name="endsAt",
				min=formatIso(min),
				max=formatIso(max),
				value=formatIso(attrs.endsAt || min),
				required)

			+date-picker("#initiative-form input[name=endsAt]")

			button.form-submit.green-button(name="visibility", value="public")
				= t("PUBLISH_TOPIC")
