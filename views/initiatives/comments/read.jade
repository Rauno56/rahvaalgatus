extends ../layout
include ../_mixins

block append options
	-
		var Initiative = require("root/lib/initiative")
		var unclosedStatus = Initiative.getUnclosedStatus(initiative)
		var subpage = unclosedStatus === "inProgress" ? "discussion" : "vote"

block prepend tab
	section#initiative-comment.primary-section: center
		include /_flash.jade

		h2= t("COMMENT_HEADING")
		article.comment: +comment(comment, editedComment)

	section.secondary-section: center
		+initiative-subscribe(initiative)
