extends ../layout
include ../_mixins

block append options
	- var subpage = "events"

block prepend tab
	- var I18n = require("root/lib/i18n")
	- var linkify = require("root/lib/linkify")

	section#initiative-events.primary-section: center
		include /_flash.jade

		aside#oss
			h2 Kas Sulle tundub ka, et menetlusvaade võiks olla parem?
			p
				| Unistame visualiseeritud andmevoodest!
				br
				| Märksõnad: avaandmed, andmeajakirjandus, argumenteeritud arutelu,
				| osalejate panus, algatuse mõju.

			p.links
				a.secondary-button(href="http://sidh2017.ut.ee")
					| Tule häkatonile!
				a.secondary-button(href="https://github.com/rahvaalgatus/rahvaalgatus")
					| Häki kodus
				br
				a.white-button(href="https://rahvaalgatus.ee/donate")
					| Anneta
				a.white-button(href="mailto:abi@rahvaalgatus.ee")
					| Küsi veel

		if events.length
			ol.events
				for event in events
					li.event
						time(datetime=event.createdAt.toJSON())
							= I18n.formatDate("numeric", event.createdAt)

						h2= event.subject
						p.text!= linkify(event.text)
		else
			p.text.empty= t("NO_EVENTS")

	section.secondary-section: center
		+initiative-subscribe(initiative)
