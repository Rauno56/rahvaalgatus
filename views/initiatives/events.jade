extends ./layout
include ./_mixins

block append options
	- var subpage = "events"

block prepend tab
	- var I18n = require("root/lib/i18n")
	- var linkify = require("root/lib/linkify")

	section#initiative-events.white-section: center
		include /_flash.jade
		+header(initiative)

		if events.length
			ol.events
				for event in events
					li.event
						h2.subject= event.subject
						time(datetime=event.createdAt)
							= I18n.formatDate("numeric" ,event.createdAt)

						p.text!= linkify(event.text)
		else
			p= t("NO_EVENTS")
