include ./_mixins
- var Config = require("root/config")
- var stringify = require("root/lib/json").stringify
- var selected = require("root/lib/css").selected
- var SITE_TITLE = Config.title
- var LANGS = Config.languages
- var ENV = process.env.ENV

doctype html
html
	block options

	head
		title #{title == null ? "" : title + " - "} #{SITE_TITLE}
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width")
		link(rel="stylesheet", href="/assets/page.css", type="text/css")

		meta(
			property="og:image",
			content=`${Config.url}/assets/rahvaalgatus-description.png`)

		case ENV
			when "staging"
			when "production"
				script(src="https://cdn.ravenjs.com/3.9.1/raven.min.js")
				script.
					Raven.config("#{Config.sentryPublicDsn}", {
						environment: "#{ENV}",
						user: !{stringify(req.user)},

						ignoreErrors: [
							"no_implementation",
							"user_cancel",
							"no_certificates"
						]
					}).install()

		include ./_livereload
		block head

	body(id=page + "-page")
		header#header: center
			menu
				+form.languages(action="/session", method="post")
					input(type="hidden", name="_method", value="put")
					- var translatable = req.lang === "xx" || "translatable" in req.query

					if translatable || LANGS.length > 1
						each lang in LANGS
							button.inherited(
								name="language",
								value=lang,
								disabled=req.lang === lang)= t(lang)

					if translatable
						button.inherited(
							name="language",
							value="xx",
							disabled=req.lang === "xx") Translate

				if req.user
					.right
						a.user(href="/user")= req.user.name
						+form.signout(action="/session", method="post")
							button.inherited(name="_method", value="delete")= t("BTN_LOG_OFF")
				else
					a.right(href="/session/new")= t("BTN_LOG_IN_REGISTER")

			a.hea-annetus(
				href="https://heakodanik.ee/annetuste-kogumise-hea-tava/",
				title="Hea annetuse koguja")
				img(src="/assets/hea-annetus.png", alt="Hea annetuse koguja")

			a.uuseakus(
				href="https://uuseakus.rahvaalgatus.ee",
				title="Uue eakuse rahvakogu")
				img(src="/assets/uuseakus.png", alt="Uue eakuse rahvakogu")

			a.kestame(
				href="https://kestame.rahvaalgatus.ee",
				title="#kuidasmekestame")
				img(src="/assets/kestame.png", alt="#kuidasmekestame")

			a.logo(href="/")
				img(src="/assets/rahvaalgatus.png", alt=SITE_TITLE)

			nav
				ul
					li: a(
						href="/initiatives",
						class=selected(page, "initiatives") || selected(page, "initiative"))
						= t("LINK_VOTING")
					li: a(href=Config.helpUrls[req.lang])= t("LINK_HELP")
					li: a(href="/about", class=selected(page, "about"))= t("LNK_ABOUT")
					li: a(href="/donate", class=selected(page, "donate"))= t("LNK_SUPPORT")

		main#main
			block body

		footer#footer
			center
				.contact
					a(href="https://kogu.ee")
						- var logo = "/assets/esstikoostoo_logo.png"
						- if (req.lang !== "et") logo = "/assets/esstikoostoo_logo_en.png"
						img(width="200", src=logo, alt=t("KOGU"))

					p
						= t("FOOTER_ADDRESS")
						br
						!= t("FOOTER_EMAIL")
						br
						!= t("FOOTER_PHONE")
						br
						| Facebook:&#32;
						a(href="https://www.facebook.com/rahvaalgatus") fb.me/rahvaalgatus
						br
						| Twitter:&#32;
						a(href="https://twitter.com/rahvaalgatus") @rahvaalgatus

				.logos
					p
						a(href="https://github.com/rahvaalgatus/rahvaalgatus")
							img(src="/assets/github-logo.svg", alt="GitHub")

		include ./_analytics
