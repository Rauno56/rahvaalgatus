							li(ui-sref-active="active", ng-class="{'header-link-rus': app.language == 'ru'}")
								a(href="#", ui-sref="discussions", ng-class="{active: ('discussions' | isState)}", translate="LINK_DISCUSSION") Arutelud
							| 					 
							li(ui-sref-active="active", ng-class="{'header-link-rus': app.language == 'ru'}")
								a(href="#", ui-sref="votings", ng-class="{active: ('votings' | isState)}", translate="LINK_VOTING") Algatused
							| 					 
							li(ui-sref-active="active", ng-class="{'header-link-rus': app.language == 'ru'}")
								a(href="", ui-sref="about", ng-class="{active: ('about' | isState)}", translate="LNK_ABOUT") Platvormist
							| 					 
							li(ui-sref-active="active", ng-class="{'header-link-rus': app.language == 'ru'}")
								a(href="", ui-sref="goodpractice", ng-class="{active: ('goodpractice' | isState)}", translate="LNK_GOOD_PRACTICE") Kasutamise hea tava
							| 					 
							li(ui-sref-active="active", ng-class="{'header-link-rus': app.language == 'ru'}")
								a(href="", ui-sref="support", ng-class="{active: ('support' | isState)}", translate="LNK_SUPPORT") Support us
							// Before Login
							li.mobile-items(ng-show="!app.user.isLoading && !app.user.loggedIn")
