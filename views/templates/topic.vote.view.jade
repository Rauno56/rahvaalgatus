div(ng-controller="TopicVoteViewFormCtrl")
	// Vote in progress view
	.admin-role-cal(ng-show="!hasVoted && !hasEnded", ng-if="!app.topicLoad")
		.head.clearfix
			p.left(translate="HEADING_CAST_YOUR_VOTE") Cast your vote
			|             
			p.right
				| {{voteCountTotal}} 
				span(translate="TXT_N_VOTES_COUNTED") votes counted
		|         
		.con.clearfix
			.left(translate="HEADING_VOTE_REQUIRE_HARD_ID")
				| This document needs a signing by ID card or Mobile ID to be registered. You can not vote if you donâ€™t identify yourself.
			|             
			.right
				p
					a
						img(src="images/icon-mobile-id.png", alt="Image")
				|                 
				p
					a
						img(src="images/icon-kart-id.png", alt="Image")
		|         
		.sign-in
			a(href="#", ng-click="!hasEnded && doVote(option)", translate="SIGN_THIS_DOCUMENT") SIGN THIS DOCUMENT
		|         
		.con.sign-info
			p(translate="SIGNING_INFO")
	|     
	.voting-block(ng-if="!app.topicLoad")
		.message.theme-4(ng-if="hasVoted && !hasEnded")
			.admin-role-cal
				.head.clearfix
					p.left(translate="DOCUMENT_SIGNED") Document signed
					|                     
					p.right
						| {{voteCountTotal}} 
						span(translate="TXT_N_VOTES_COUNTED") votes counted
				|                 
				.con-down.clearfix
					.left
						span(translate="HEADING_VOTE_REGISTERED") Your vote has been registered!
					|                     
					.right
						a.download.pull-right(votedata="{{vote.downloads}}", ng-href="{{vote.downloads.bdocVote}}", ng-show="isAuthTypeHard() && hasVoted", target="_blank", translate="LNK_DOWNLOAD_USER_BDOC") Download your BDOC
				|                 
				.sign-in
					a(href="#", ng-click="doVote(optionRevoke)", translate="REVOKE_SIGNATURE") REVOKE SIGNATURE
				//
					<div class="future-progress">
					<p translate="WANT_TO_KEEP_INFORMED_ABOUT_FURTHER_PROGRESS">Want to keep informed about further progress?</p>
					<form>
					<input type="email" placeholder="{{'Email address' | translate}}">
					<input type="submit" value="{{'KEEP ME INFORMED' | translate}}">
					</form>
					</div>
		|         
		.admin-role-cal(ng-if="(!app.topicLoad && (isAdmin() || canEdit()) && canSendToFollowUp() && hasVotesRequired) && topic.status != 'followUp'")
			.head.clearfix
				p.left(translate="BTN_SEND_TO_FOLLOWUP") Sent to parliament
				|                 
				p.right
					| {{voteCountTotal}} 
					span(translate="TXT_N_VOTES_COUNTED") votes counted
			|             
			.con.clearfix
				.left(translate="AT_LEAST_1000_SIGNATURES_COLLECTED")
					| At least 1000 signatures were collected. You can now send this to the parliament.
			|             
			.sign-in.clearfix
				.left
					a.download.pull-right(ng-href="{{vote.downloads.bdocVote}}", ng-show="isAuthTypeHard() && hasVoted", target="_blank", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}", translate="LNK_DOWNLOAD_USER_BDOC") Download your BDOC
				|                 
				.right(ng-show="isAdmin() && canSendToFollowUp()")
					a(href="#", ng-click="confirmTopicFollowUp(topic)", translate="BTN_SEND_TO_FOLLOWUP", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}") REOPEN TOPIC
		|         
		.admin-role-cal(ng-if="(!app.topicLoad && hasEnded && (isAdmin() || canEdit()) && !hasVotesRequired) && topic.status != 'followUp'")
			.head.clearfix
				p.left(translate="SIGNING_DEADLINE_REACHED") Sent to parliament
				|                 
				p.right
					| {{voteCountTotal}} 
					span(translate="TXT_N_VOTES_COUNTED") votes counted
			|             
			.con.clearfix
				.left(translate="NOT_ENOUGH_SIGNATURES")
			|             
			.sign-in.clearfix
				.left
					a.download.pull-right(ng-href="{{vote.downloads.bdocVote}}", ng-show="isAuthTypeHard() && hasVoted", target="_blank", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}", translate="LNK_DOWNLOAD_USER_BDOC") Download your BDOC
				|                 
				.right(ng-show="isAdmin() && voteCountTotal < Config.VOTES_REQUIRED")
					a(ng-if="topic.status != 'closed'", href="#", ng-click="reopenTopic(topic)", translate="REOPEN_TOPIC", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}") REOPEN TOPIC
		|         
		.admin-role-cal(ng-if="!app.topicLoad && (isAdmin() || canEdit()) && topic.status == 'followUp'")
			.head.clearfix
				p.left(translate="SENT_TO_PARLIAMENT") Sent to parliament
				|                 
				p.right
					| {{voteCountTotal}} 
					span(translate="TXT_N_VOTES_COUNTED") votes counted
			|             
			.con.clearfix
				.left(translate="SENT_TO_PARLIAMENT_CONTENT")
			|             
			.sign-in.clearfix
				.left
					a.download.pull-right(ng-href="{{vote.downloads.bdocFinal}}", ng-show="isAuthTypeHard()", target="_blank", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}", translate="BTN_DOWNLOAD_FINAL_BDOC") Download your BDOC
				|                 
				.right(ng-show="isAdmin() && voteCountTotal < Config.VOTES_REQUIRED")
					a(href="#", ng-click="reopenTopic(topic)", translate="REOPEN_TOPIC", ng-class="{voteEndEt: (app.language==='et'),voteEndRu: (app.language==='ru'), 'voteEndEn': (app.language==='en')}") REOPEN TOPIC
		// /message
	// /voting-block
