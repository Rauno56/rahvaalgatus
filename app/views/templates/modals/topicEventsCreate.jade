.ui-dialog.ui-widget.ui-widget-content.ui-corner-all.ui-front.ui-draggable.ui-resizable(tabindex="-1", role="dialog", aria-labelledby="ui-id-5", style="position: absolute; height: auto; width: 640px; top: 328px; left: 732px; display: block;")
	.ui-dialog-titlebar.ui-widget-header.ui-corner-all.ui-helper-clearfix.ui-draggable-handle
		span#ui-id-5.ui-dialog-title(translate="POST_INITIATIVE_UPDATE")
			| Post an update on the initiative
		|     
		button.ui-button.ui-widget.ui-state-default.ui-corner-all.ui-button-icon-only.ui-dialog-titlebar-close(type="button", role="button", title="Close", ng-click="closeThisDialog()")
			span.ui-button-icon-primary.ui-icon.ui-icon-closethick
			span.ui-button-text Close
	|   
	.ui-dialog-content.ui-widget-content(style="width: auto; min-height: 110px; max-height: none; height: auto;")
		.arg-form(style="margin:0;padding:1em")
			form(ng-submit="postEvent(event)", name="newEventForm")
				p
					label(translate="POST_INITIATIVE_TITLE") Subject
					|           
					input(type="text", ng-model="event.subject", required="")
				|         
				p
					label(translate="POST_INITIATIVE_TEXT") Text
					|           
					textarea(ng-model="event.text", required="")
				|         
				p.clearfix
					button.right(type="submit", ng-disabled="newEventForm.$invalid||savingEvent", translate="BTN_POST_UPDATE") POST UPDATE
					|           
					button.left(type="button", ng-disabled="savingEvent", ng-click="closeThisDialog()", translate="BTN_CANCEL") CANCEL
				|         
				p.error(ng-if="savingError")
					br
					|           
					span(translate="FAILED_TO_SAVE_INITIATIVE") Failed to save
					|           
					span ({{savingError}})
